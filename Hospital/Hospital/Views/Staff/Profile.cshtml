@using System.Data;
@{
    Layout = null;
    DataRow R = (DataRow)ViewData["Informations"];
}


<h1>Profile</h1>

<form class="profileFrm">
    <div class="imgcontainer">
        <img src="~/Images/@R["Image"]" alt="Avatar" class="avatar">
        <input type="file" name="userprofileimg" style="display:none" />
    </div>

    <div class="container">
        <label for="uname"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="name" required value="@R["Name"]">

        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="password" required value="@R["Password"]">

        <button type="submit" style="background-color:#eee;color:black;font-weight:bolder;">Save</button>
        @*<label>
            <input type="checkbox" checked="checked" name="remember"> Remember me
        </label>*@
    </div>

    @*<div class="container" style="background-color:#f1f1f1">
        <button type="button" class="cancelbtn">Cancel</button>
        <span class="psw">Forgot <a href="#">password?</a></span>
    </div>*@
</form>
